{
  "name": "cactus-app-web-client",
  "version": "1.0.0",
  "description": "Client service for the Cactus App",
  "private": true,
  "repository": "git@github.com:Krystian19/cactus-app-client-service.git",
  "author": "Jan Guzman <janfrancisco19@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --poll --respawn --ignore-watch node_modules --ignore-watch public ./src/server",
    "build": "webpack --progress --colors --config webpack.config.prod.js",
    "watch": "webpack --progress --colors --watch --config webpack.config.dev.js",
    "test": "jest ./app/tests/",
    "coverage": "codecov",
    "lint": "tslint --project .",
    "gqlgen": "yarn run gql-download-schema; yarn run gql-type-gen;",
    "gql-download-schema": "get-graphql-schema http://localhost:4000/playground_graphql > reference.graphql",
    "gql-type-gen": "file=\"./src/types/index.ts\"; mkdir -p \"${file%/*}\"; graphql-schema-typescript generate-ts reference.graphql --output $(echo $file);"
  },
  "workspaces": [
    "./src/logger"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "dependencies": {
    "@cactus-app/types": "file:./src/types",
    "@cactus-app/js-logger-module": "1.0.0",
    "@types/express": "^4.16.1",
    "@types/hls.js": "0.12.0",
    "@types/lodash": "^4.14.129",
    "@types/node": "^10.12.19",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-intl": "^2.3.18",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "apollo-boost": "^0.1.7",
    "apollo-cache-inmemory": "^1.4.3",
    "apollo-client": "^2.4.13",
    "apollo-link": "^1.2.2",
    "apollo-link-context": "^1.0.8",
    "apollo-link-error": "^1.0.9",
    "apollo-link-http": "^1.5.11",
    "emoji-awesome": "^0.0.2",
    "express": "^4.16.4",
    "express-locale": "^1.2.0",
    "express-request-proxy": "^2.2.2",
    "font-awesome": "^4.7.0",
    "get-graphql-schema": "^2.1.2",
    "gql2ts": "^1.10.1",
    "graphql": "^14.1.1",
    "graphql-schema-typescript": "^1.3.1",
    "graphql-tag": "^2.10.1",
    "helmet": "^3.15.1",
    "hls.js": "0.12.0",
    "jquery": "3.4.0",
    "lodash": "^4.17.11",
    "moment-timezone": "^0.5.23",
    "morgan": "^1.9.1",
    "node-fetch": "^2.3.0",
    "normalize.css": "^8.0.1",
    "prop-types": "^15.5.4",
    "qs": "^6.7.0",
    "react": "^16.6.3",
    "react-apollo": "^2.4.1",
    "react-dom": "^16.6.3",
    "react-intl": "^2.9.0",
    "react-player": "^1.13.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "sha256": "^0.2.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.2.4",
    "video-react": "^0.14.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.18",
    "@types/jest": "^24.0.6",
    "codecov": "3.1.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "file-loader": "^3.0.1",
    "font-loader": "^0.1.2",

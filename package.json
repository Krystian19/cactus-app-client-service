    "resolve-url-loader": "^3.0.1",
    "sass-loader": "^7.1.0",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "tslint": "^5.16.0",
    "tslint-react": "^4.0.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "webpack": "4.29.3",

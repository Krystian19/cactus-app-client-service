{
  "name": "cactus-app-web-client",
  "version": "1.0.0",
  "description": "Client service for the Cactus App",
  "private": true,
  "repository": "git@github.com:Krystian19/cactus-app-client-service.git",
  "author": "Jan Guzman <janfrancisco19@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --poll --respawn --ignore-watch node_modules --ignore-watch public ./src/server",
    "build": "webpack --progress --colors --config webpack.config.prod.js",
    "watch": "webpack --progress --colors --watch --config webpack.config.dev.js",
    "test": "jest ./app/tests/",
    "coverage": "codecov",
    "lint": "eslint . --ext .ts,.tsx",
    "lint-commit": "git diff --name-only --cached | grep -E '\\.tsx?$' | xargs tslint",
    "gqlgen": "(cd src/types && yarn gqlgen);"
  },
  "workspaces": [
    "./src/logger",
    "./src/types"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-commit"
    }
  },
  "dependencies": {
    "@cactus-app/js-logger-module": "1.0.0",
    "@cactus-app/types": "1.0.0",
